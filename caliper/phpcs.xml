<?xml version="1.0"?>
<ruleset name="PSR12">
    <description>PSR12 compliant rules for caliper-cli.</description>
    <arg name="extensions" value="php" />
    <rule ref="PSR12" />
    <arg name="colors" />
    <arg value="ps" />

    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>*/database/*</exclude-pattern>
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>*/database/*</exclude-pattern>
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <exclude-pattern>/app/Models</exclude-pattern>
    <exclude-pattern>/bootstrap/</exclude-pattern>
    <exclude-pattern>/builds/</exclude-pattern>
    <exclude-pattern>/config/</exclude-pattern>
    <exclude-pattern>/vendor/</exclude-pattern>
    <exclude-pattern>/tests/CreatesApplication.php</exclude-pattern>
    <exclude-pattern>/tests/TestCase.php</exclude-pattern>
</ruleset>
